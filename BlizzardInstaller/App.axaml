<Application
    x:Class="BlizzardInstaller.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:local="using:BlizzardInstaller"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark" />
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush Color="#0d0e12" x:Key="DefaultDark" />
        <SolidColorBrush Color="#007ACC" x:Key="ButtonColor" />
        <SolidColorBrush Color="#005a96" x:Key="ButtonHoverColor"/>
    </Application.Resources>
</Application>
